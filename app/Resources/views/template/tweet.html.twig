<div class="card animated fadeInLeft">
    <div class="card-image">
        <img src="{{ tweet.imageUrl }}">
    </div>
    <div class="card-content">
        <p>{{ tweet.title | raw }}</p>
    </div>
    <div class="card-action">
        <a class="startup" href="{{ tweet.url }}">{{ tweet.mentions|join |default("Read More...")}}</a>
        <a class="category" href="{{ path('view_by_category', {'category': tweet.category|lower }) }}">{{ tweet.category|upper }}</a>
    </div>
</div>