<div class="card">
    <div class="card-image">
        <img src="{{ tweet.imageUrl }}">
    </div>
    <div class="card-content">
        <p>{{ tweet.title | raw }}</p>
    </div>
    <div class="card-action">
        <a class="startup" href="{{ tweet.url }}">{{ tweet.mentions|join |default("Read More...")}}</a>
        <a class="category">{{ tweet.category|upper }}</a>
    </div>
</div>